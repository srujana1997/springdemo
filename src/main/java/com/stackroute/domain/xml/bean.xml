<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans.xsd">
       //creation for bean for actor class
    <bean id="actor1" class="com.stackroute.domain.Actor">
            <constructor-arg name="name" index="0" type="java.lang.String" value="charan"></constructor-arg>
            <constructor-arg name="gender" index="1" type="java.lang.String" value="male"></constructor-arg>
            <constructor-arg name="age" index="2" type="int" value="3"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" type="java.lang.String" value="krish"></constructor-arg>
        <constructor-arg name="gender" index="1" type="java.lang.String" value="male"></constructor-arg>
        <constructor-arg name="age" index="2" type="int" value="4"></constructor-arg>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" type="java.lang.String" value="sam"></constructor-arg>
        <constructor-arg name="gender" index="1" type="java.lang.String" value="female"></constructor-arg>
        <constructor-arg name="age" index="2" type="int" value="5"></constructor-arg>
    </bean>
       //creation of bean for movie class
    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype">
    <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
</beans>
